<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="@drawable/grd">

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:id="@+id/resultClassicConverter"
        android:layout_marginBottom="106dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerFrom"
        android:layout_toRightOf="@+id/editTextFrom"
        android:layout_toEndOf="@+id/editTextFrom"
        android:layout_alignBottom="@+id/editTextFrom"
        android:layout_alignTop="@+id/editTextFrom" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:id="@+id/editTextFrom"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white" />

    <Button
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"
        android:text="convert to"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/convertClassic"
        android:visibility="visible"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp"
        android:layout_below="@+id/editTextFrom"
        android:layout_alignLeft="@+id/editTextFrom"
        android:layout_alignStart="@+id/editTextFrom"
        android:background="@drawable/round_button_shape"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="monospace" />

    <Spinner
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerTo"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="25dp"
        android:layout_alignTop="@+id/convertClassic"
        android:layout_alignRight="@+id/spinnerFrom"
        android:layout_alignEnd="@+id/spinnerFrom" />

</RelativeLayout>